<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Hỏi Dân IT - Dự án laptopshop" />
    <meta name="author" content="Hỏi Dân IT" />
    <title>Detail Product</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(() => {
            const avatarFile = $("#avatarFile");
            avatarFile.change(function (e) {
                const imgURL = URL.createObjectURL(e.target.files[0]);
                $("#avatarPreview").attr("src", imgURL);
                $("#avatarPreview").css({ "display": "block" });
            });
        });
    </script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>

    <div id="layoutSidenav">
        <%- include('../layout/sidenav'); -%>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h5 class="mt-4">Manage Products</h5>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="/admin/product">Products</a></li>
                    </ol>

                    <div class="row">
                        <div class="col-6 mx-auto">
                            <div>

                                <% errors.forEach(function(error) { %>
                                    <div class="alert alert-danger mb-3">
                                        <%= error %>
                                    </div>
                                <% }) %>
                                <h5>Detail Product</h5>
                                <form action="/admin/update-product" method="post" enctype="multipart/form-data">
                                    <input value="<%= oldData.id %>" type="text" class="form-control" name="id" style="display: none;">
                                    <div class="row">
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Name:</label>
                                            <input value="<%= oldData.name %>" type="text" class="form-control" name="name" placeholder="Enter product name">
                                        </div>
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Price:</label>
                                            <input value="<%= oldData.price %>" type="number" class="form-control" name="price" placeholder="Enter product price">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Detail Description:</label>
                                        <textarea class="form-control" name="detailDesc" rows="2"><%= oldData.detailDesc %></textarea>
                                    </div>
                                    <div class="row">
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Short Description:</label>
                                            <input value="<%= oldData.shortDesc %>" type="text" class="form-control" name="shortDesc" placeholder="Enter product short description">
                                        </div>
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Quantity:</label>
                                            <input value="<%= oldData.quantity %>" type="number" class="form-control" name="quantity" placeholder="Enter product quantity">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Factory</label>
                                            <select name="factory" class="form-select">
                                                <option value="APPLE">Apple (MacBook)</option>
                                                <option value="ASUS">Asus</option>
                                                <option value="LENOVO">Lenovo</option>
                                                <option value="DELL">Dell</option>
                                                <option value="LG">LG</option>
                                                <option value="ACER">Acer</option>
                                            </select>
                                        </div>
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Target</label>
                                            <select name="target" class="form-select">
                                                <option value="GAMING">Gaming</option>
                                                <option value="SINHVIEN-VANPHONG">Sinh viên - Văn phòng</option>
                                                <option value="THIET-KE-DO-HOA">Thiết kế đồ họa</option>
                                                <option value="MONG-NHE">Mỏng nhẹ</option>
                                                <option value="DOANH-NHAN">Doanh nhân</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Image</label>
                                        <input name="image" class="form-control" type="file" id="avatarFile" accept=".png, .jpg, .jpeg">
                                    </div>
                                    <% if (oldData.image) { %>
                                        <img style="max-height: 250px; display: block;" alt="avatar preview" id="avatarPreview" src="/images/product/<%= oldData.image %>" />
                                    <% } else { %>
                                        <img style="max-height: 250px; display: none;" alt="avatar preview" id="avatarPreview" />
                                    <% } %>
                                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <%- include('../layout/footer'); -%>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
</body>

</html>
